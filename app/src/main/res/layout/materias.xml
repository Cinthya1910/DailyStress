<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cielo">

        <ImageButton
            android:id="@+id/btnmenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/menu"/>

        <ImageButton
            android:id="@+id/btnmas"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/mas"/>

        <ImageButton
            android:id="@+id/btnmenos"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/menos"/>

        <ImageButton
            android:id="@+id/btnedit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/editar"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="MATERIAS"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/cielo"
        android:text="MATEMATICAS"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/cielo"
        android:text="PROGRAMACION"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/cielo"
        android:text="REDES"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/cielo"
        android:text="INGLES"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/cielo"
        android:text="ESPAÃ‘OL"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/cielo"
        android:text="LINUX"
        android:textColor="@color/black"
        />






    </LinearLayout>